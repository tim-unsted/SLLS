@using System.Linq
@model slls.ViewModels.SimpleSearchingViewModel
@*<h2>@ViewBag.Title</h2>*@

@Html.HiddenFor(x => Model.ClassmarksFilter)
@Html.HiddenFor(x => Model.IsActualSearch)
@Html.HiddenFor(x => Model.OrderBy)

@using (Html.BeginForm("SimpleSearchResults", "Home", FormMethod.Post, new { id = "searchForm", defaultbutton = "btnSubmit" }))
{
    if (TempData["NoData"] != null)
    {
        @Html.Partial("_NoData", TempData["NoData"])
    }

    <div class="alert alert-info" id="searchHeader" style="margin-top: 20px;">
        <div class="row">
            <div class=" col-md-12">
                <div class="form-group form-inline" style="margin-bottom: 0;">
                    <span class="pull-right"><a href="#" onclick="$('#helpAlert').toggle()">Help <span aria-hidden="true" class="glyphicon glyphicon-info-sign"></span></a></span>
                    @Html.LabelFor(model => model.SearchString)<span>:&nbsp;</span>
                    @*@Html.EditorFor(model => model.SearchString, new { htmlAttributes = new { @class = "form-control", placeholder = "Find ...", style = "width: 50%", id = "MainSearchString" } })*@
                    @Html.TextBoxFor(model => model.SearchString, new { @placeholder = "Find ...", @class = "form-control", style = "width: 50%", id = "MainSearchString" })
                    <span>&nbsp;&nbsp;</span>@Html.Label("In")<span>:&nbsp;</span>
                    @Html.DropDownList("SearchField", null, new { @class = "form-control", style = "width: 20%" })
                    <button type="submit" id="btnSubmit" value="Find" class="btn btn-primary"><span aria-hidden="true" class="glyphicon glyphicon-search"></span> Find</button>
                </div>
                @Html.ValidationMessageFor(model => model.SearchString, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="alert alert-info" id="helpAlert" style="display: none;">
            <a class="close" onclick="$('#helpAlert').hide()">×</a>
            <h4><span aria-hidden="true" class="glyphicon glyphicon-info-sign"></span> Searching Tips</h4>
            @Html.Raw(ViewBag.SearchTips)

        </div>
    </div>

    if (Model.Results != null && Model.Results.Any())
    {
        <div class="row">
            <div class="col-md-3">

                <div class="panel">
                    <div class="panel-heading" style="padding: 0 10px;">
                        <span style="font-size: 18px;">Refine By</span>
                        <span class="pull-right"><a href="@Url.Action("ClearAllFilters", "Home")" class="btn btn-link" title="Clear All Filters"><span aria-hidden="true" class="glyphicon glyphicon-minus-sign"></span> Clear All</a></span>
                    </div>
                    <div class="panel-body">
                        @if (Model.KeywordFilter.Count > 0)
                        {
                            @Html.Partial("_NarrowByKeyword")
                        }
                        @if (Model.MediaFilter.Count > 0)
                        {
                            @Html.Partial("_NarrowByMedia")
                        }
                        @if (Model.ClassmarksFilter.Count > 0)
                        {
                            @Html.Partial("_NarrowByClassmark")
                        }
                        @if (Model.PublisherFilter.Count > 0)
                        {
                            @Html.Partial("_NarrowByPublisher")
                        }
                        @if (Model.AuthorFilter.Count > 0)
                        {
                            @Html.Partial("_NarrowByAuthor")
                        }
                        @if (Model.LanguageFilter.Count > 0)
                        {
                            @Html.Partial("_NarrowByLanguage")
                        }
                    </div>
                </div>

            </div>
            <div class="col-md-9" style="border-left: 1px solid #eee;">
                @if (Model.Results != null && Model.Results.Any())
                {
                    @Html.Partial("_Simpleresults")
                }
            </div>
        </div>
    }
}

@Html.Hidden("SearchResultSize", Model.SearchResultSize)
@Html.Hidden("OrderBy", Model.OrderBy)

@section scripts {
    @*@Scripts.Render("~/bundles/datatables")*@
    <script src="@Url.Content("~/DataTables/OPAC/_Simpleresults.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#MainSearchString').focus();

            $(function () {
                $("input[type='checkbox']").change(function () {
                    $(this).closest("form").submit();
                });
            });

            function selectAllText(textbox) {
                textbox.focus();
                textbox.select();
            }

            //$('#MainSearchString').click(function () { selectAllText(jQuery(this)) });
            var autoSuggestEnabled = @Json.Encode(Model.AutoSuggestEnabled);

            if (autoSuggestEnabled) {
                $("#MainSearchString").autocomplete({
                    source: function (request, response) {
                        var terms = new Array();
                        var urlGetTerms = "@Url.Action("AutoCompleteSearchTerm", "Home")";
                        $.ajax({
                            async: false,
                            cache: false,
                            type: "POST",
                            url: urlGetTerms,
                            data: { "term": request.term },
                            success: function (data) {
                                for (var i = 0; i < data.length; i++) {
                                    terms[i] = { label: data[i].Value, Id: data[i].Key };
                                }
                            }
                        });
                        response(terms);
                    },
                    select: function (event, ui) {
                        event.preventDefault();
                        if (ui.item) {
                            if (ui.item.Id != null) {
                                $('#MainSearchString').val(ui.item.label);
                            }
                        }
                    }
                });
            }
        });

</script>
}

