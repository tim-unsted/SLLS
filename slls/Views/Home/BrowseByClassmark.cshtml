@using Westwind.Globalization
@model slls.ViewModels.SimpleSearchingViewModel

@Html.Partial("_HeaderSeeAlso", Model)

@using (Html.BeginForm(null, null, FormMethod.Get, new { id = "TitlesTable" }))
{
    <div class="alert alert-info">
        <div class="row" style="margin-right: 0">
            <div class="col-md-12">
                <p><span class="glyphicon glyphicon-info-sign"></span> Select a @DbRes.T("Classmarks.Classmark", "FieldDisplayName") from the drop-down list below to view all items catalogued under that  @DbRes.T("Classmarks.Classmark", "FieldDisplayName").ToLower():</p>
            </div>
            <div class="col-md-12">
                @Html.DropDownList("ListClassmarks", null, new { @class = "form-control selectpicker", onchange = "this.form.submit();" })
            </div>
        </div>
    </div>
}

<div id="TitlesTable">
    @Html.Partial("_Simpleresults", Model)
</div>

@Html.Hidden("SearchResultSize", @Model.SearchResultSize)
@Html.Hidden("OrderBy", @Model.OrderBy)

@section scripts {
@*@Scripts.Render("~/bundles/datatables")*@
<script src="@Url.Content("~/DataTables/OPAC/_Simpleresults.js")" type="text/javascript"></script>
@Scripts.Render("~/bundles/selectPicker")
    <script type="text/javascript">
        $(document).ready(function() {
            $('.selectpicker').selectpicker({
                liveSearch: true,
                showSubtext: true
            });
        });
    </script>
}