            @Html.Action("RenderGadget", "Home", new { col = 3, row = 5, hasTitles = Model.HasTitles })
            @*@Html.Action("_UserBookmarks", "Home")
                @Html.Action("_UserSavedSearches", "Home")*@
        </div>
    </div>

</div>
