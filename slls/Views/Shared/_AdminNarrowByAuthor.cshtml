@model slls.ViewModels.SimpleSearchingViewModel
@using Westwind.Globalization

<h5>@DbRes.T("Authors.Author", "FieldDisplayName")</h5>
<ul class="list-unstyled">
    @Html.EditorFor(model => model.AuthorFilter)
</ul>
<div>
    <a href="@Url.Action("AdminShowAllAuthorsFilter", "Searching")" class="btn btn-show-more" title="Show more" data-toggle="modal" data-target="#lrgModal"><span aria-hidden="true" class="glyphicon glyphicon-plus-sign"></span> Show All @DbRes.T("Authors", "EntityType")</a>
</div>
<hr class="hr-compact" />

<script type="text/javascript">
    $(document).ready(function () {
        $(function () {
            $("input[type='checkbox']").change(function () {
                $(this).closest("form").submit();
            });
        });
    });
</script>


