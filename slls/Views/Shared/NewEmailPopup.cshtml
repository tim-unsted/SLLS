@using slls.Utils.Helpers
@using Westwind.Globalization
@model slls.ViewModels.NewEmailViewModel

@Html.Partial("_ModalAddHeader")

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

		<div class="modal-body">
    
			<div class="form-horizontal">

                @Html.Partial("_NewEmailPartial")

			</div>
		</div>
    
    <div class="modal-footer">
        <button type="submit" id="btnSend" value="Send" class="btn btn-success"><span aria-hidden="true" class="glyphicon glyphicon-send"></span> Send</button>
        &nbsp;&nbsp;or&nbsp;<button type="button" class="btn-link" data-dismiss="modal">@DbRes.T("Buttons.Cancel", "Terminology")</button>
    </div>
}

