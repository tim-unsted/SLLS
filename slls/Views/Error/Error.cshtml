@model System.Web.Mvc.HandleErrorInfo
@{
    ViewBag.Title = "Error";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>&nbsp;</h1>
            <div class="col-md-3">
                <img title="Cake!" alt="" src="../Images/Cake-Chocolate-icon.png" />
            </div>
            <div class="col-md-9">
                <h1>Oops!</h1>
                <h3 class="text-muted">Sorry, something went wrong with your last request.</h3>
                
                @if (Model != null)
                {
                    <div>
                        <a href="@Url.Action("ErrorEmail", "Messaging", new {exceptionMessage = Model.Exception.Message, controller = Model.ControllerName, action = Model.ActionName, stackTrace = Model.Exception.StackTrace})" title="Email Support" class="btn btn-primary">Send To Support</a>
                        &nbsp;&nbsp;or&nbsp;<input type="button" value="Go Back" class="btn btn-link" onclick="window.history.back();" />
                    </div>
                }
                else
                {
                    <div>
                        <input type="button" value="Go Back" class="btn btn-link" onclick="window.history.back();" />
                    </div>
                }

            </div>
        </div>
    </div>
</div>
