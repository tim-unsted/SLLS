@using slls.Utils.Helpers
@using Westwind.Globalization
@model slls.Models.CoverImage

<div class="modal-body">
    <button type="button" class="close" id="btn_Close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <div style="text-align: center">
        <img src="@Url.Action("RenderImage", "Images", new {id = Model.ImageId})" alt="@Model.Source" style="width: auto; height: auto; max-width: 100%; max-height: 100%;">
    </div>

    <hr />

    <div >
        <p>@Html.HelpInline("Copy and paste the following HTML image tag if you want to use this image in any HTML block (e.g. an Announcement):")</p>
        <p><code>@ViewBag.ImageSrc</code></p>
    </div>
</div>



<script type="text/javascript">
    $(function () {
        $('#btn_Close').click(function () {
            $('#stdModal').modal('hide');
            $('#lrgModal').modal('hide');
        });
    });
</script>