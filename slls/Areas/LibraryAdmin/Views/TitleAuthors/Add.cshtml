@using Westwind.Globalization
@model slls.ViewModels.TitleAuthorAddViewModel

@Html.Partial("_ModalAddHeader")

@using (Html.BeginForm("Create", "TitleAuthors", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="modal-body">

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.TitleId)
            
            <div class="alert alert-info">
                <span><strong>Tip: </strong>You may add multiple <span class="text-lowercase">@DbRes.T("Authors.Author", "FieldDisplayName")</span>s at once by clicking on the required items whilst holding down the CTRL key.</span>
            </div>

            <div class="form-group">
                @Html.Label(DbRes.T("Titles.Title", "FieldDisplayName"), htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <p class="form-control-static">@Html.DisplayFor(model => model.Title)</p>
                </div>
            </div>

            <div class="form-group">
                @Html.Label(DbRes.T("Authors.Author", "FieldDisplayName"), htmlAttributes: new {@class = "control-label col-md-2"})
                <div class="col-md-10">
                    @Html.ListBoxFor(x => x.SelectedAuthors, Model.AvailableAuthors, new {size = 15, @class = "form-control"})
                    @Html.ValidationMessageFor(model => model.AuthorId, "", new {@class = "text-danger"})
                </div>
            </div>

            <div class="form-group">
                <span class="col-md-2"></span>
                <div class="col-md-10">
                    @DbRes.T("Authors.Author", "FieldDisplayName") not listed? <a href="@Url.Action("Create", "Authors", new { titleId = Model.TitleId, type = "author" })" class="modal-link" data-dismiss="modal" title="Add a new @DbRes.T("Authors.Author", "FieldDisplayName")">Click here to add a new @DbRes.T("Authors.Author", "FieldDisplayName")</a>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        
        <button type="submit" id="add_btn" value="Save" class="btn btn-success"><span aria-hidden="true" class="glyphicon glyphicon-ok"></span> Add Selected @DbRes.T("Authors.Author", "FieldDisplayName")s</button>
        &nbsp;&nbsp;or&nbsp;<button type="button" class="btn-link" data-dismiss="modal">@DbRes.T("Buttons.Cancel", "Terminology")</button>
    </div>
}
