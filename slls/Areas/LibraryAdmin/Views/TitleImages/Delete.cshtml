@using Westwind.Globalization
@model slls.Models.TitleImage

@Html.Partial("_ModalDeleteHeader")

@using (Html.BeginForm("Delete", "TitleImages", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.ValidationSummary()
    @Html.HiddenFor(model => model.TitleImageId)

    @Html.AntiForgeryToken()

    <div class="modal-body">
        <div class="control-group">
            <p>Are you sure you want to delete the following image?</p>
        </div>

        <div class="form-group">
            @Html.Label(DbRes.T("Titles.Title", "FieldDisplayName"), htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                <p class="form-control-static">@Html.DisplayFor(model => model.Title.Title1)</p>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-2">
            </div>
                <div class="col-sm-10">
                    <img src="@Url.Action("RenderImage", "Files", new { id = Model.ImageId, area = "" })" style="max-width: 100%;">
                </div>
            </div>
    </div>
    
    @Html.Partial("_ModalDeleteFooter")
}

