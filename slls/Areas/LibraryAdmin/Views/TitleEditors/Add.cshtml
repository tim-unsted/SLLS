@using Westwind.Globalization
@model slls.ViewModels.TitleEditorAddViewModel

@Html.Partial("_ModalAddEditHeader")

@using (Html.BeginForm("Create", "TitleEditors", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="modal-body">

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new {@class = "text-danger"})
            @Html.HiddenFor(model => model.TitleId)

            <div class="alert alert-info">
                <span><strong>Tip: </strong>You may add multiple <span class="text-lowercase">@DbRes.T("Authors.Editor", "FieldDisplayName")</span>s at once by clicking on the required items whilst holding down the CTRL key.</span>
            </div>

            <div class="form-group">
                @Html.Label(DbRes.T("Titles.Title", "FieldDisplayName"), htmlAttributes: new {@class = "control-label col-md-2"})
                <div class="col-md-10">
                    <p class="form-control-static">@Html.DisplayFor(model => model.Title)</p>
                </div>
            </div>

            <div class="form-group">
                @Html.Label(DbRes.T("Authors.Editor", "FieldDisplayName"), htmlAttributes: new {@class = "control-label col-md-2"})
                <div class="col-md-10">
                    @Html.ListBoxFor(x => x.SelectedEditors, Model.AvailableEditors, new {size = 15, @class = "form-control"})
                    @Html.ValidationMessageFor(model => model.AuthorId, "", new {@class = "text-danger"})
                </div>
            </div>

            <div class="form-group">
                <span class="col-md-2"></span>
                <div class="col-md-10">
                    @DbRes.T("Authors.Editor", "FieldDisplayName") not listed? <a href="@Url.Action("Create", "Authors", new { titleId = Model.TitleId, type = "editor" })" class="modal-link" data-dismiss="modal" title="Add a new @DbRes.T("Authors.Editor", "FieldDisplayName")">Click here to add a new @DbRes.T("Authors.Editor", "FieldDisplayName")</a>
                </div>
            </div>

        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" id="add_btn" value="Save" class="btn btn-success"><span aria-hidden="true" class="glyphicon glyphicon-ok"></span> Add Selected @DbRes.T("Authors.Editor", "FieldDisplayName")s</button>
        &nbsp;&nbsp;or&nbsp;<button type="button" class="btn-link" data-dismiss="modal">@DbRes.T("Buttons.Cancel", "Terminology")</button>
    </div>
}

@Scripts.Render("~/bundles/modalAddEditHeaderNoJson")
<script type="text/javascript">

    $(document).ready(function () {
        $('#SelectedEditors').focus();

        $('form').submit(function (e) {
            e.preventDefault();
            $.post(this.action, $(this).serialize(), function (response) {
                if (response.error) {
                    alert(response.error);
                } else {
                    $('#stdModal').modal('hide');
                    $('#lrgModal').modal('hide');
                    var titleId = $('#TitleId').val();
                    var url = '@Url.Action("_ListEditors", "Titles", new { id = "REPLACEME" })';
                    $.get(url.replace('REPLACEME', titleId), function (data) {
                        $("#_listEditors").html(data);
                    });

                }
            }, 'json');
        });
    });

</script>