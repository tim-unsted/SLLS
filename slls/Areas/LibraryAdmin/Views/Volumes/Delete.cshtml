@using Westwind.Globalization
@model slls.ViewModels.VolumesEditViewModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h3 class="modal-title" id="deleteLabel">Confirm @ViewBag.Title</h3>
</div>

@using (Html.BeginForm("Delete", "Volumes", FormMethod.Post))
{
    @Html.ValidationSummary()
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.VolumeId)
    @Html.HiddenFor(model => model.CopyId)

    <div class="modal-body">
        <p>
            You are about to delete the following @DbRes.T("CopyItems.Copy_Item", "FieldDisplayName"). Are you sure you want to continue?</p>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Title)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Title)
            </dd>

            <dt>
                @Html.Label(DbRes.T("CopyItems.Barcode", "FieldDisplayName"))
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Barcode)
            </dd>

            <dt>
                @Html.Label(DbRes.T("CopyItems.Label_Text", "FieldDisplayName"))
            </dt>

            <dd>
                @Html.DisplayFor(model => model.LabelText)
            </dd>
        </dl>

</div>

    <div class="modal-footer">
        <button id="btnDelete" class="btn btn-primary" type="submit">@DbRes.T("Buttons.Confirm_Delete", "Terminology")</button>
        <button class="btn btn-default" data-dismiss="modal" aria-hidden="true">Cancel</button>
    </div>
}

<script type="text/javascript">
    $(function () {
        $('#btnDelete').click(function () {
            $('#stdModal').modal('hide');
        });
    })
</script>
