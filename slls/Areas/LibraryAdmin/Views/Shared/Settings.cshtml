@model slls.ViewModels.ParameterIndexViewModel

@Html.Partial("_ModalEditHeader")

@using (Html.BeginForm("UpdateSettings", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="modal-body">

        <div class="form-horizontal">
            @Html.HiddenFor(model => model.Parameters)

            @foreach (var item in Model.Parameters)
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div class="col-md-4">
                        <p class="control-label ">@Html.DisplayFor(modelItem => item.ParameterID)</p>
                    </div>

                    <div class="col-md-7">
                        @Html.EditorFor(modelItem => item.ParameterValue, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(modelItem => item.ParameterValue, "", new { @class = "text-danger" })
                        <span class="help-inline">@Html.DisplayFor(modelItem => item.ParamUsage)</span>
                    </div>
                </div>
            }
        </div>
    </div>

    @Html.Partial("_ModalEditFooter")
}

