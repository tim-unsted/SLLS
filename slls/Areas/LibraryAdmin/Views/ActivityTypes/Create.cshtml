@using Westwind.Globalization
@model slls.ViewModels.ActivityTypesAddViewModel

@Html.Partial("_ModalAddHeader")

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="modal-body">

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new {@class = "text-danger"})
            <div class="form-group">
                @Html.Label(DbRes.T("Activities.Activity_Type", "FieldDisplayName"), htmlAttributes: new {@class = "control-label col-md-2"})
                <div class="col-md-9">
                    @Html.EditorFor(model => model.Activity, new {htmlAttributes = new {@class = "form-control"}})
                    @Html.ValidationMessageFor(model => model.Activity, "", new {@class = "text-danger"})
                </div>
            </div>

        </div>
    </div>

    @Html.Partial("_ModalAddFooter")
}