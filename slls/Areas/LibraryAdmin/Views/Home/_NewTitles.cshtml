@model slls.ViewModels.DashboardViewModel

<div class="panel panel-gadget shadowed">
    <div class="panel-heading">
        <span class="panel-title">
            <span aria-hidden="true" class="glyphicon glyphicon-bookmark"></span>&nbsp;&nbsp;<span is="gadget-Title">@ViewBag.Title</span><span class="pull-right"><a href="@Url.Action("NewTitles", "Titles")" title="Edit 'New Titles' list" class="btn btn-link"><span aria-hidden="true" class="glyphicon glyphicon-pencil"></span> Edit List</a></span>
        </span>
    </div>
    <div class="panel-body">
        <table class="table table-compact">
            <thead>
            <tr>
                <th>
                    Title
                </th>
            </tr>
            </thead>
            <tbody>
            @foreach (var newTitle in Model.NewTitles)
            {
                <tr>
                    <td>
                        <a href="@Url.Action("Edit", "Titles", new {id = newTitle.TitleID})">@newTitle.Title1</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    <div class="panel-footer">
        Showing 1-@ViewBag.Showing of <a href="@Url.Action("NewTitles", "Titles")" title="View full list">@ViewBag.Count</a> titles on the 'New Titles' list.
</div>
</div>
