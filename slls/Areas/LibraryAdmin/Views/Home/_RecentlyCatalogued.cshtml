@using System.Linq
@model slls.ViewModels.DashboardViewModel

<div class="panel panel-gadget shadowed">
    <div class="panel-heading">
        <span class="panel-title">
            <span aria-hidden="true" class="glyphicon glyphicon-calendar"></span>&nbsp;&nbsp;<span is="gadget-Title">@ViewBag.Title</span><span class="pull-right"><a href="@Url.Action("RecentlyAdded", "Titles")" title="View all recently catalogued items" class="btn btn-link"><span aria-hidden="true" class="glyphicon glyphicon-eye-open"></span> View All</a></span>
        </span>
    </div>
    <div class="panel-body">
        <table class="table table-compact">
            <thead>
            <tr>
                <th>
                    Title
                </th>
            </tr>
            </thead>
            <tbody>
            @foreach (var newTitle in Model.RecentTitles.OrderByDescending(t => t.DateCatalogued))
            {
                <tr>
                    <td>
                        <a href="@Url.Action("Edit", "Titles", new {id = newTitle.TitleID})">@newTitle.Title1</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    <div class="panel-footer">
        Showing 1-@ViewBag.Showing of <a href="@Url.Action("RecentlyAdded", "Titles")" title="View full list">@ViewBag.Count</a> recently catalogued items.
    </div>
</div>
