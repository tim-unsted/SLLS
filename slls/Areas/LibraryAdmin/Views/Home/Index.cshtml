@model slls.ViewModels.DashboardViewModel

@* This next section maybe hidden, depending on the client preferences/site.css ... *@
@if (Model.ShowWelcomeMessage)
{
    <div class="container">
        <div class="jumbotron">
            @Html.Raw(Model.WelcomeHeader)
            @Html.Raw(Model.WelcomeMessage)
        </div>
    </div>
}

<div class="container">
    <div class="row">
        <div class="col-md-3">
            @Html.Action("RenderGadget", "Home", new { col = 1, row = 1, hasTitles = Model.HasTitles, area = "LibraryAdmin" })
            @Html.Action("RenderGadget", "Home", new { col = 1, row = 2, hasTitles = Model.HasTitles, area = "LibraryAdmin" })
            @Html.Action("RenderGadget", "Home", new { col = 1, row = 3, hasTitles = Model.HasTitles, area = "LibraryAdmin" })
            @Html.Action("RenderGadget", "Home", new { col = 1, row = 4, hasTitles = Model.HasTitles, area = "LibraryAdmin" })
            @Html.Action("RenderGadget", "Home", new { col = 1, row = 5, hasTitles = Model.HasTitles, area = "LibraryAdmin" })
        </div>

        <div class="col-md-5">
            @Html.Action("RenderGadget", "Home", new { col = 2, row = 1, hasTitles = Model.HasTitles, area = "LibraryAdmin" })
            @Html.Action("RenderGadget", "Home", new { col = 2, row = 2, hasTitles = Model.HasTitles, area = "LibraryAdmin" })
            @Html.Action("RenderGadget", "Home", new { col = 2, row = 3, hasTitles = Model.HasTitles, area = "LibraryAdmin" })
            @Html.Action("RenderGadget", "Home", new { col = 2, row = 4, hasTitles = Model.HasTitles, area = "LibraryAdmin" })
            @Html.Action("RenderGadget", "Home", new { col = 2, row = 5, hasTitles = Model.HasTitles, area = "LibraryAdmin" })
        </div>

        <div class="col-md-4">
            @Html.Action("RenderGadget", "Home", new { col = 3, row = 1, hasTitles = Model.HasTitles, area = "LibraryAdmin" })
            @Html.Action("RenderGadget", "Home", new { col = 3, row = 2, hasTitles = Model.HasTitles, area = "LibraryAdmin" })
            @Html.Action("RenderGadget", "Home", new { col = 3, row = 3, hasTitles = Model.HasTitles, area = "LibraryAdmin" })
            @Html.Action("RenderGadget", "Home", new { col = 3, row = 4, hasTitles = Model.HasTitles, area = "LibraryAdmin" })
            @Html.Action("RenderGadget", "Home", new { col = 3, row = 5, hasTitles = Model.HasTitles, area = "LibraryAdmin" })

        </div>
    </div>
</div>
