@using Westwind.Globalization
@model slls.ViewModels.SupplierPeopleCommsViewModel

@Html.Partial("_ModalEditHeader")

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="modal-body">

        <div class="form-horizontal">
            
            @Html.ValidationSummary(true, "", new {@class = "text-danger"})
            @Html.HiddenFor(model => model.CommID)
            @Html.HiddenFor(model => model.ContactID)

            <div class="form-group">
                @Html.LabelFor(model => model.ContactName, htmlAttributes: new {@class = "control-label col-md-3"})
                <div class="col-md-8">
                    <p class="form-control-static">@Html.DisplayFor(model => model.ContactName)</p>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MethodID, htmlAttributes: new {@class = "control-label col-md-3"})
                <div class="col-md-8">
                    @Html.DropDownList("MethodID", null, htmlAttributes: new {@class = "form-control"})
                    @Html.ValidationMessageFor(model => model.MethodID, "", new {@class = "text-danger"})
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Detail, htmlAttributes: new {@class = "control-label col-md-3"})
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Detail, new {htmlAttributes = new {@class = "form-control"}})
                    @Html.ValidationMessageFor(model => model.Detail, "", new {@class = "text-danger"})
                </div>
            </div>

        </div>
    </div>

    @Html.Partial("_ModalEditFooter")
}

