@using Westwind.Globalization
@model slls.ViewModels.LoanTypesAddEditViewModel

@Html.Partial("_ModalEditHeader")

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="modal-body">

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new {@class = "text-danger"})
            @Html.HiddenFor(model => model.LoanTypeID)

            <div class="form-group">
                @Html.LabelFor(model => model.LoanTypeName, htmlAttributes: new {@class = "control-label col-md-3"})
                <div class="col-md-8">
                    @Html.EditorFor(model => model.LoanTypeName, new {htmlAttributes = new {@class = "form-control"}})
                    @Html.ValidationMessageFor(model => model.LoanTypeName, "", new {@class = "text-danger"})
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.RefOnly, htmlAttributes: new {@class = "control-label col-md-3"})
                <div class="col-md-1">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.RefOnly)
                        @Html.ValidationMessageFor(model => model.RefOnly, "", new {@class = "text-danger"})
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DailyFine, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.DailyFine, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DailyFine, "", new { @class = "text-danger" })
                    <span class="help-inline">Tip: Set as 0 (zero) for no fines</span>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.LengthDays, htmlAttributes: new {@class = "control-label col-md-3"})
                <div class="col-md-8">
                    @Html.EditorFor(model => model.LengthDays, new {htmlAttributes = new {@class = "form-control"}})
                    @Html.ValidationMessageFor(model => model.LengthDays, "", new {@class = "text-danger"})
                    <span class="help-inline">Tip: Must be greater than 0 (zero) days to allow item to be loaned</span>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MaxItems, htmlAttributes: new {@class = "control-label col-md-3"})
                <div class="col-md-8">
                    @Html.EditorFor(model => model.MaxItems, new {htmlAttributes = new {@class = "form-control"}})
                    @Html.ValidationMessageFor(model => model.MaxItems, "", new {@class = "text-danger"})
                    <span class="help-inline">Tip: Set as 0 (zero) for unlimited number of items</span>
                </div>
            </div>
        </div>
    </div>
    
    @Html.Partial("_ModalEditFooter")
}

@Scripts.Render("~/bundles/modalAddEditHeader")
