            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Url, htmlAttributes: new {@class = "control-label col-md-3"})
            <div class="col-md-8">
                @Html.EditorFor(model => model.Url, new {htmlAttributes = new {@class = "form-control"}})
