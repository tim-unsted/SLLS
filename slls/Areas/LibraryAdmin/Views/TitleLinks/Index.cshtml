@using slls.Models
@using slls.Utils.Helpers
@using Westwind.Globalization
@model System.Collections.Generic.IEnumerable<slls.Models.TitleLink>

<h2>@ViewBag.Title</h2>

<p>
    <a href="@Url.Action("Create", "TitleLinks")" title="Add new @DbRes.T("Links.Link", "FieldDisplayName")" class="btn btn-primary" data-toggle="modal" data-target="#lrgModal"><span aria-hidden="true" class="glyphicon glyphicon-plus-sign"></span> Add New</a>
    <a href="@Url.Action("CheckLinks", "TitleLinks")" title="Check @DbRes.T("TitleLinks", "EntityType")" class="btn btn-success"><span aria-hidden="true" class="glyphicon glyphicon-ok"></span> Check Links</a>
</p>

<table class="table" id="titlelinks">
    <thead>
    <tr>
        <th>
            @Html.Label(DbRes.T("Titles.Title", "FieldDisplayName"))
        </th>
        <th>
            @Html.DisplayNameFor(model => model.URL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsValid)
        </th>
        <th></th>
        <th></th>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="dont-break-out">
                    <a href="@Url.Action("Edit", "Titles", new { id = item.TitleID })">@item.Title.Title1</a>
                </td>
                <td class="dont-break-out">
                    @Html.ResolvedLink(item.URL, item.FileId ?? 0, item.HoverTip, item.DisplayText)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsValid)
                </td>
                <td>
                    @Html.Raw(item.Title.FiledTitle)
                </td>
                <td class="just-right">
                    <a href="@Url.Action("Delete", new {id = item.TitleLinkID})" class="btn btn-link modal-link" title="Delete"><span aria-hidden="true" class="glyphicon glyphicon-trash" /></a>
                    <a href="@Url.Action("Edit", new {id = item.TitleLinkID})" class="btn btn-link" title="Edit" data-toggle="modal" data-target="#lrgModal"><span aria-hidden="true" class="glyphicon glyphicon-pencil"></span></a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts {
@*@Scripts.Render("~/bundles/datatables")*@
    <script type="text/javascript">
        $(document).ready(function () {
            $('#titlelinks').DataTable({
                "dom": sDom,
                "pagingType": sPagingType,
                "pageLength": sPageLength,
                "lengthMenu": sLengthMenu,
                "language": {
                    "url": "/DataTables/lang.txt"
                },
                "columnDefs": [
                    {
                        "orderData": 3,
                        "targets": [0],
                        "orderSequence": ["desc", "asc"]
                    },
                    {
                        "width": "40%",
                        "targets": [0, 1]
                    },
                    {
                        "width": "10%",
                        "targets": [2]
                    },
                    {
                        "visible": false,
                        "targets": [3]
                    },
                    {
                        "sortable": false,
                        "width": "10%",
                        "targets": [4]
                    }
                ]
            });
        });
    </script>
}