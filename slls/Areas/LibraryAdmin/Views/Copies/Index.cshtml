@using System.Collections.Generic
@using Westwind.Globalization
@model System.Collections.Generic.IEnumerable<slls.Models.Copy>

<h2>@ViewBag.Title</h2>

<div class="alert alert-info">
    @using (Html.BeginForm("Index", "Copies", FormMethod.Get))
    {
        <div class="form-group" title="@ViewBag.Message">
            @Html.DropDownList("id", (IEnumerable<SelectListItem>)ViewData["TitleId"], new { @class = "form-control selectpicker", onchange = "this.form.submit();" })
        </div>
    }

    <a href="@Url.Action("Create", "Copies")" title="Add new @DbRes.T("Copies.Copy", "FieldDisplayName")" class="btn btn-primary"><span aria-hidden="true" class="glyphicon glyphicon-plus-sign"></span> Add New @DbRes.T("Copies.Copy", "FieldDisplayName")</a>
    
</div>

<div id="TitlesTable">
    @Html.Partial("_Index", Model)
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('.selectpicker').selectpicker({
            liveSearch: true,
            showSubtext: true
        });
    });
</Script>

