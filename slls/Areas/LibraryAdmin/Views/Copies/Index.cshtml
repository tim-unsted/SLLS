@using System.Collections.Generic
@using Westwind.Globalization
@model slls.ViewModels.TitleEditViewModel

<h2>@ViewBag.Title</h2>

<div class="alert alert-info">
    @Html.Partial("_SelectTitle")

    <div class="row" style="margin-right: 0">
        <div class="col-md-12" style="margin-top: 10px;">
            <a href="@Url.Action("Create", "Copies")" title="Add new @DbRes.T("Copies.Copy", "FieldDisplayName")" class="btn btn-primary"><span aria-hidden="true" class="glyphicon glyphicon-plus-sign"></span> Add New @DbRes.T("Copies.Copy", "FieldDisplayName")</a>
        </div>
    </div>
</div>

<div id="TitlesTable">
    @Html.Partial("_IndexNoTitle")
</div>

@Html.Hidden("AutoSuggestUrl", @Url.Action("AutoComplete", "Titles"))
@Html.Hidden("DestUrl", @Url.Action(Model.RedirectAction, "Copies", new { id = "REPLACEME" }))

@section scripts {
    <script src="@Url.Content("~/Scripts/jquery.mcautocomplete.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/_SelectTitle.js")" type="text/javascript"></script>
    @*@Scripts.Render("~/bundles/datatables")*@
    <script src="@Url.Content("~/DataTables/LibraryAdmin/Copies/_IndexNoTitle.js")" type="text/javascript"></script>
}

