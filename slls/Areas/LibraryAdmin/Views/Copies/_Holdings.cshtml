@using Westwind.Globalization
@*@model slls.Models.Copy*@
@model slls.ViewModels.CopyDetailsEditViewModel

<div class="form-horizontal">
    <br/>

    <div class="form-group">
        <div class="col-md-12">
            @Html.Label(DbRes.T("Titles.Title", "FieldDisplayName"))
        </div>
        <div class="col-md-12">
            <span class="form-control"><a href="@Url.Action("Edit", "Titles", new {id = @Model.TitleId}, null)" title="View/Edit Title">@Model.Title</a></span>
        </div>
    </div>

    <div class="row">
        <div class="col-md-7">

            <div class="panel panel-default">
                <div class="panel-heading">
                    <span class="panel-title">
                        <span class="pull-right">
                            <a href="@Url.Action("Create", "PartsReceived", new {id = Model.CopyId})" class="btn btn-success modal-link" style="margin-bottom: 5px;" title="Check-In New @DbRes.T("CheckIn.Part", "FieldDisplayName")"><span aria-hidden="true" class="glyphicon glyphicon-check"></span> Check-In New @DbRes.T("CheckIn.Part", "FieldDisplayName")</a>
                            <a href="@Url.Action("PrintCirculationSlip", "Circulation", new {id = Model.CopyId})" class="btn btn-primary" style="margin-bottom: 5px;" target="_blank" title="Print @DbRes.T("Circulation.Circulation_Slip", "FieldDisplayName")"><span aria-hidden="true" class="glyphicon glyphicon-print"></span> Print @DbRes.T("Circulation.Circulation_Slip", "FieldDisplayName")</a>
                        </span>
                        <h5>@DbRes.T("CheckIn.Parts_Received", "FieldDisplayName") (Copy: @Model.CopyNumber)</h5>
                    </span>
                </div>
                <div class="panel-body" id="_partsReceived">
                    @*@Html.Action("_PartsReceivedSubForm", "PartsReceived", new {id = Model.CopyId})*@
                    @Html.Partial("_PartsReceivedSubForm", Model)
                </div>
            </div>
        </div>

        <div class="col-md-5">

            <div class="panel panel-default">
                <div class="panel-heading">
                    <span class="panel-title">
                        <span class="pull-right">
                            <a href="@Url.Action("EditHoldings", "Copies", new {id = Model.CopyId})" class="btn btn-primary modal-link" style="margin-bottom: 5px;" title="Add more @DbRes.T("Copies.Holdings", "FieldDisplayName")"><span aria-hidden="true" class="glyphicon glyphicon-pencil"></span> Edit</a>
                        </span>
                        <h5>@DbRes.T("Copies.Holdings", "FieldDisplayName") (Copy: @Model.CopyNumber)</h5>
                    </span>
                </div>
                <div class="panel-body">
                    @Html.TextAreaFor(model => model.Holdings, new {rows = "", cols = "", @class = "form-control"})
                    @Html.ValidationMessageFor(model => model.Holdings, "", new {@class = "text-danger"})
                </div>
            </div>

            <div class="panel panel-default">
                <div class="panel-heading">
                    <span class="panel-title">
                        <span class="pull-right">
                            <a href="@Url.Action("AddRecipient", "Circulation", new {id = Model.CopyId})" class="btn btn-primary modal-link" style="margin-bottom: 5px;" title="Add more @DbRes.T("Circulation.Recipients", "FieldDisplayName")"><span aria-hidden="true" class="glyphicon glyphicon-plus-sign"></span> Add</a>
                            <a href="@Url.Action("CirculationList", "Circulation", new {copy = Model.CopyId})" class="btn btn-primary" style="margin-bottom: 5px;" title="Edit @DbRes.T("Circulation.Circulation_List", "FieldDisplayName")"><span aria-hidden="true" class="glyphicon glyphicon-pencil"></span> Edit</a>
                        </span>
                        <h5>@DbRes.T("Circulation.Circulation_List", "FieldDisplayName") (Copy: @Model.CopyNumber)</h5>
                    </span>
                </div>
                <div class="panel-body">
                    @Html.Action("_CirculationListSubForm", "Circulation", new {id = Model.CopyId})
                </div>
            </div>
        </div>

    </div>
</div>

@section scripts {
@*@Scripts.Render("~/bundles/datatables")*@
    
}
