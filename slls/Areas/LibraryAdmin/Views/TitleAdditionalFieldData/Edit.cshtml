@using Westwind.Globalization
@model slls.ViewModels.TitleCustomDataEditViewModel

@Html.Partial("_ModalEditHeader")

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="modal-body">

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.RecId)
            @Html.HiddenFor(model => model.TitleId)

            <div class="form-group">
                @Html.Label(DbRes.T("Titles.Title", "FieldDisplayName"), htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <p class="form-control-static">@Html.DisplayFor(model => model.Title)</p>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.FieldId, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("FieldID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.FieldId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.FieldData, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @if (Model.IsLongText)
                    {
                        @Html.TextAreaFor(model => model.FieldData, new {@class = "form-control xlarge"})
                    }
                    else
                    {
                        @Html.EditorFor(model => model.FieldData, new {htmlAttributes = new {@class = "form-control"}})
                    }
                    @Html.ValidationMessageFor(model => model.FieldData, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>

    @Html.Partial("_ModalEditFooter")

}

@Scripts.Render("~/bundles/modalAddEditHeader")
