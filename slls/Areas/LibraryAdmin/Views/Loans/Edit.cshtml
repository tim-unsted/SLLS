@using System.ServiceModel.Dispatcher
@using Westwind.Globalization
@model slls.ViewModels.EditLoanViewModel

@Html.Partial("_ModalEditHeader")

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="modal-body">

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new {@class = "text-danger"})
            @Html.HiddenFor(model => model.BorrowID)
            @Html.HiddenFor(model => model.VolumeId)
            @Html.HiddenFor(model => model.Borrowed)

            <div class="form-group">
                @Html.Label(DbRes.T("Titles.Title", "FieldDisplayName"), "Title", htmlAttributes: new {@class = "control-label col-md-3"})
                <div class="col-md-8">
                    <p class="form-control-static">@Html.DisplayFor(model => model.Title)</p>
                </div>
            </div>

            <div class="form-group">
                @Html.Label(DbRes.T("Copies.Copy_Number", "FieldDisplayName"), "Copy Number", htmlAttributes: new {@class = "control-label col-md-3"})
                <div class="col-md-8">
                    <p class="form-control-static">@Html.DisplayFor(model => model.CopyNumber)</p>
                </div>
            </div>

            <div class="form-group">
                @Html.Label(DbRes.T("CopyItems.Barcode", "FieldDisplayName"), "Barcode", htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-8">
                    <p class="form-control-static">@Html.DisplayFor(model => model.Barcode)</p>
                </div>
            </div>

            <div class="form-group">
                @Html.Label(DbRes.T("Borrowing.Borrowed_By", "FieldDisplayName"), "Borrowed By", htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-8">
                    @Html.DropDownList("UserID", null, "Select a Borrower", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.BorrowerUserId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label(DbRes.T("Borrowing.Borrowed", "FieldDisplayName"), "Date Borrowed", htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-8">
                    <p class="form-control-static">@Html.DisplayFor(model => model.Borrowed)</p>
                </div>
            </div>

            <div class="form-group">
                @Html.Label(DbRes.T("Borrowing.Date_Return_Due", "FieldDisplayName"), "Return Due", htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-3">
                    @Html.EditorFor(model => model.ReturnDue, new {htmlAttributes = new {@class = "form-control" }})
                    @Html.ValidationMessageFor(model => model.ReturnDue, "", new {@class = "text-danger"})
                </div>
            </div>
            
            <div class="form-group">
                @Html.Label(DbRes.T("Borrowing.Is_Renewal", "FieldDisplayName"), "Renewal?", htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-8">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.Renewal)
                        @Html.ValidationMessageFor(model => model.Renewal, "", new {@class = "text-danger"})
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    @Html.Partial("_ModalEditFooter")
}

@Scripts.Render("~/bundles/modalAddEditHeader")
