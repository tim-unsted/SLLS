@using System.Linq
@using Westwind.Globalization
@model slls.ViewModels.AccountYearsEditViewModel

@Html.Partial("_ModalEditHeader")

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="modal-body">

        <div class="form-horizontal">

            @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
            {
                <div class="alert alert-danger">
                    <a href="#" class="close" data-dismiss="alert">&times;</a>
                    <h4>Oops!</h4>
                    @Html.ValidationSummary()
                </div>
            }
            @Html.HiddenFor(model => model.AccountYearID)
            @Html.HiddenFor(model => model.CanUpdate)
            @Html.HiddenFor(model => model.CanDelete)

            <div class="form-group">
                @Html.Label(DbRes.T("AccountYears.Account_Year", "FieldDisplayName"), htmlAttributes: new {@class = "control-label col-md-3"})
                <div class="col-md-8">
                    @Html.EditorFor(model => model.AccountYear, new {htmlAttributes = new {@class = "form-control"}})
                    @Html.ValidationMessageFor(model => model.AccountYear, "", new {@class = "text-danger"})
                </div>
            </div>

            <div class="form-group">
                @Html.Label(DbRes.T("AccountYears.Year_Start_Date", "FieldDisplayName"), htmlAttributes: new {@class = "control-label col-md-3"})
                <div class="col-md-4">
                    @Html.EditorFor(model => model.YearStartDate, new {htmlAttributes = new {@class = "form-control"}})
                    @Html.ValidationMessageFor(model => model.YearStartDate, "", new {@class = "text-danger"})
                </div>
            </div>

            <div class="form-group">
                @Html.Label(DbRes.T("AccountYears.Year_End_Date", "FieldDisplayName"), htmlAttributes: new {@class = "control-label col-md-3"})
                <div class="col-md-4">
                    @Html.EditorFor(model => model.YearEndDate, new {htmlAttributes = new {@class = "form-control"}})
                    @Html.ValidationMessageFor(model => model.YearEndDate, "", new {@class = "text-danger"})
                </div>
            </div>

        </div>
    </div>

    
    @Html.Partial("_ModalEditFooter")

}

<script type="javascript/text">
    $(document).ready(function() {
    $(".cssselector").datepicker({ dateFormat: 'dd/mm/yy' });
    });
</script>