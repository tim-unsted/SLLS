@using Westwind.Globalization
@model slls.ViewModels.TitlesListViewModel

@Html.Partial("_HeaderSeeAlso", Model)

@using (Html.BeginForm(null, null, FormMethod.Get, new { id = "TitlesTable", name = "frmSelect" }))
{
    <div class="alert alert-info">
        <div class="row" style="margin-right: 0">
            <div class="col-md-12">
                <p><span class="glyphicon glyphicon-info-sign"></span> Start searching for an @DbRes.T("Keywords.Keyword", "FieldDisplayName") by entering part of the term you are looking for in the box below:</p>
            </div>
            <div class="col-md-12">
                @Html.TextBoxFor(x => x.SelectedKeyword, new { @placeholder = "Start typing the term you are looking for ...", @class = "form-control" })
            </div>
        </div>
    </div>
}

<div id="TitlesTable">
    @Html.Partial("_Index", Model)
</div>

@Html.Hidden("DestUrl", @Url.Action("BrowseBySubject", "Titles", new { id = "REPLACEME", area = "LibraryAdmin" }))

@section scripts {
    <script src="@Url.Content("~/DataTables/LibraryAdmin/Titles/_Index.js")" type="text/javascript"></script>
    <script type="text/javascript">
        
        $("#SelectedKeyword").autocomplete({
            source: function (request, response) {
                var title = new Array();
                var urlGetTerms = "@Url.Action("AutocompleteUsed", "Keywords")";
                $.ajax({
                    async: false,
                    cache: false,
                    type: "POST",
                    url: urlGetTerms,
                    data: { "term": request.term },
                    success: function (data) {
                        for (var i = 0; i < data.length; i++) {
                            title[i] = { label: data[i].Value, Id: data[i].Key };
                        }
                    }
                });
                response(title);
            },
            select: function (event, ui) {
                if (ui.item) {
                    if (ui.item.Id != null) {
                        $('#KeywordId').val(ui.item.Id);
                        var url = $("#DestUrl").val();
                        window.location.href = url.replace('REPLACEME', ui.item.Id);
                    }
                }
            }
        });
    </script>
}