@using System
@using slls.Utils.Helpers
@model System.Collections.Generic.IEnumerable<slls.Models.OrderDetail>

<table id="orderdetails" class="table table-condensed table-hover" style="width: 100%;">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrderNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SupplierID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderCategoryID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PriceGross)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Item)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReceivedDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InvoiceRef)
        </th>
        <th></th>
        <th></th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @if (String.IsNullOrEmpty(item.OrderNo))
                {
                    @Html.ActionLink(" ", "Edit", "OrderDetails", new {id = item.OrderID, callingController = "titles"}, null)
                }
                else
                {
                    @Html.ActionLink(item.OrderNo, "Edit", "OrderDetails", new {id = item.OrderID, callingController = "titles"}, null)
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Supplier.SupplierName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderCategory.OrderCategory1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PriceGross)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Item)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReceivedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InvoiceRef)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDateSortable)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReceivedDateSortable)
            </td>

            <td class="just-right">
                @if (item.InvoiceDate == null && item.InvoiceRef == null)
                {
                    <a href="@Url.Action("AddReceipt", "OrderDetails", new {id = item.OrderID, callingAction = @Html.CurrentViewName()})" class="btn btn-link" data-toggle="modal" data-target="#lrgModal" title="Add Invoice">&nbsp;<span aria-hidden="true" class="glyphicon glyphicon-tag"></span></a>
                }
                @if (item.ReceivedDate == null)
                {
                    <a href="@Url.Action("QuickReceipt", "OrderDetails", new {id = item.OrderID})" class="btn btn-link modal-link" data-toggle="modal" data-target="#stdModal" title="Quick Receipt">&nbsp;<span aria-hidden="true" class="glyphicon glyphicon-calendar"></span></a>
                }
                <a href="@Url.Action("Delete", "OrderDetails", new {id = item.OrderID})" class="btn btn-link modal-link" title="Delete"><span aria-hidden="true" class="glyphicon glyphicon-trash"></span></a>
                <a href="@Url.Action("Edit", "OrderDetails", new {id = item.OrderID})" class="btn btn-link" title="Edit">&nbsp;<span aria-hidden="true" class="glyphicon glyphicon-pencil"></span></a>

            </td>
        </tr>
    }
    </tbody>
</table>
