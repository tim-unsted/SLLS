@using Westwind.Globalization
@model slls.ViewModels.TitlesListViewModel

@Html.Partial("_HeaderSeeAlso", Model)

@using (Html.BeginForm(null, null, FormMethod.Get, new { id = "TitlesTable" }))
{
    <div class="well well-default">
        <div class="form-group">
            @Html.DropDownList("ListAuthors", null, "Select an " + @DbRes.T("Authors.Author", "FieldDisplayName"), new { @class = "form-control selectpicker", onchange = "this.form.submit();" })
        </div>
    </div>
}

<div id="TitlesTable">
    @Html.Partial("_Index", Model)
</div>

@section scripts {
@Scripts.Render("~/bundles/selectPicker")
@*@Scripts.Render("~/bundles/datatables")*@
<script src="@Url.Content("~/DataTables/LibraryAdmin/Titles/_Index.js")" type="text/javascript"></script>

    <script type="text/javascript">
        $(document).ready(function() {
            $('.selectpicker').selectpicker({
                liveSearch: true,
                showSubtext: true
            });
        });
    </script>
}