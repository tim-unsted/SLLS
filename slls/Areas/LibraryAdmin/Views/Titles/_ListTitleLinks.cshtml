@using slls.Utils.Helpers
@using Westwind.Globalization
@model IEnumerable<slls.Models.TitleLink>

<table id="subjects" class="table table-compact table-hover">
    <tbody>
        @foreach (var item in Model.OrderBy(l => l.DisplayText))
        {
            <tr>
                <td>
                    @Html.ResolvedLink(item.URL, item.FileId, item.HoverTip, item.DisplayText)
                    @*}
                    else
                    {
                        <a href="@Url.Action("FileDownload", "Home", new { id = item.FileID, area = "" })" title="Download file">@item.DisplayText</a>
                    }*@
                </td>
                <td class="just-right">
                    <a href="@Url.Action("Edit", "TitleLinks", new {id = item.TitleLinkID})" class="btn btn-link" data-toggle="modal" data-target="#lrgModal" title="Edit @DbRes.T("TitleLinks.Link", "FieldDisplayName")"><span aria-hidden="true" class="glyphicon glyphicon-pencil"></span></a>
                    <a href="@Url.Action("Delete", "TitleLinks", new {id = item.TitleLinkID})" class="btn btn-link modal-link" title="Remove @DbRes.T("TitleLinks.Link", "FieldDisplayName")"><span aria-hidden="true" class="glyphicon glyphicon-trash"></span></a>
                </td>
            </tr>
        }
    </tbody>
</table>

