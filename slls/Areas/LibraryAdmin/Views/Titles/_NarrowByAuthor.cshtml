@model System.Collections.Generic.IEnumerable<slls.Models.Author>

<div class="panel panel-primary">
    <div class="panel-heading">
        @*<span class="panel-title">*@
        Narrow by Author
        @*</span>*@
    </div>
    <div class="panel-body">
        <ul class="list-unstyled">
            @foreach (var item in Model)
            {
                <li>@Html.ActionLink(string.IsNullOrEmpty(item.DisplayName) ? "[no name]" : item.DisplayName, "AdminSearch", "Searching", new
               {
                   q = @ViewBag.SearchTerm,
                   f = @ViewBag.SearchField,
                   m = @ViewBag.MediaID,
                   c = @ViewBag.ClassmarkID,
                   l = @ViewBag.LanguageID,
                   p = @ViewBag.PublisherID,
                   a = item.AuthorID,
                   k = @ViewBag.KeywordID
               }, new { @class = "" }) <span class="badge small">@item.TitleCount</span></li>
            }
        </ul>
    </div>
</div>



