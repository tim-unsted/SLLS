@using Westwind.Globalization

<div class="container">
    <div class="jumbotron">
        <h1 class="text-warning">@ViewBag.MainHeading</h1>
        <h3 class="text-muted">@ViewBag.SubHeading</h3>
    </div>
</div>
<br/>
<div class="container">
    <div class="row">

        <div class="col-md-4 col-md-offset-4">
            <p>
                <a href="@Url.Action("CheckOut")" title="Borrow an item" class="btn  btn-primary btn-lg btn-block">@DbRes.T("Borrowing.Check_Out", "FieldDisplayName").ToUpper()</a>
            </p>
            <br />
            <p>
                <a href="@Url.Action("CheckIn")" title="Return an item" class="btn  btn-primary btn-lg btn-block">@DbRes.T("Borrowing.Check_In", "FieldDisplayName").ToUpper()</a>
            </p>
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
        </div>

    </div>
</div>
