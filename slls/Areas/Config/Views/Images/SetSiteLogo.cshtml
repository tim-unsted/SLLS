@using Westwind.Globalization
@model slls.ViewModels.SelectPopupViewModel

@Html.Partial("_ModalAddEditHeader")

@using (Html.BeginForm(Model.PostSelectAction, Model.PostSelectController, FormMethod.Post, new { @class = "form-horizontal", id = "frmSelect" }))
{
    @Html.ValidationSummary()
    @Html.HiddenFor(x => x.PostSelectAction)
    @Html.HiddenFor(x => x.PostSelectController)
    @Html.HiddenFor(x => x.HeaderText)
    @Html.HiddenFor(x => x.PostSelectId)
    <div class="modal-body">
        @if (!Model.DetailsHeader.IsEmpty())
        {
            <div class="alert alert-info">
                @Html.Raw(Model.DetailsHeader)
            </div>
        }
        @if (!Model.DetailsText.IsEmpty())
        {
            <p>
                @Html.Raw(Model.DetailsText).
            </p>
        }
        <div class="form-group">
            <div class="col-md-12">
                @Html.Label(Model.SelectLabel, htmlAttributes: new { @class = "control-label" })
                @Html.DropDownListFor(x => x.SelectedItem, Model.AvailableItems, Model.SelectText, new { @class = "form-control selectpicker" })
            </div>
        </div>

        <img id="selectedImage" alt="image" style="width: auto; height: auto; max-width: 100%; max-height: 100%; padding-bottom: 10px;">

        <div class="form-group">
            <div class="col-md-12">
                &nbsp;Image not listed? <a href="@Url.Action("Add", new { logo = true })" data-dismiss="modal" class="modal-link">Click here to upload a new image.</a>
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <button type="submit" id="btnSubmit" class="btn btn-success"><span aria-hidden="true" class="glyphicon glyphicon-ok"></span> @Html.DisplayFor(model => model.OkButtonText)</button>
        &nbsp;&nbsp;or&nbsp;<button type="button" class="btn-link" data-dismiss="modal">@DbRes.T("Buttons.Cancel", "Terminology")</button>
    </div>
}

@Scripts.Render("~/bundles/selectPicker")
@Scripts.Render("~/bundles/modalAddEditHeader")
<script type="text/javascript">
    $(document).ready(function () {
        $('.selectpicker').selectpicker({
            liveSearch: true,
            showSubtext: true
        });
        $('#selectedImage').hide();
    });

    $(function () {
        $('#SelectedItem').on('dblclick', function () {
            $("#frmSelect").submit();
        });
    });

    $("#SelectedItem").change(function () {
        var imageId = $("#SelectedItem").val();
        if (imageId > 0) {
            var url = "@Url.Action("RenderImage", "Files", new {id = "xxx", area = ""})";
            $("#selectedImage").attr("src", url.replace('xxx', imageId));
            $('#selectedImage').show();
        } else {
            $('#selectedImage').hide();
        }
    });
</script>