@using Westwind.Globalization
@model slls.Models.CoverImage

@Html.Partial("_ModalAddHeader")

@using (Html.BeginForm("Delete", "Images", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.ValidationSummary()
    @Html.HiddenFor(model => model.ImageId)

    @Html.AntiForgeryToken()

    <div class="modal-body">
        <div class="control-group">
            <p>Are you sure you want to delete the following image?</p>
        </div>
        
        <div class="form-group">
            <div class="col-sm-2">
            </div>
                <div class="col-sm-10">
                    <img src="@Url.Action("RenderImage", "Files", new {id = Model.ImageId})" style="max-width: 100%;">
                </div>
            </div>
    </div>
    
    @Html.Partial("_ModalDeleteFooter")
}
