@using System.Linq
@using iTextSharp.xmp.impl
@using Westwind.Globalization
@model System.Collections.Generic.IEnumerable<slls.Models.SearchOrderType>

<script type="text/javascript">
    $(document).ready(function () {
        $('#searchordertypes').DataTable({
            "dom": sDom,
            "pagingType": sPagingType,
            "pageLength": sPageLength,
            "lengthMenu": sLengthMenu,
            "language": {
                "url": "/DataTables/lang.txt"
            },
            "order": [1, 'asc'],
            "columnDefs": [
                {
                    "width": "10%",
                    "searchable": false,
                    "sortable": false,
                    "targets": [2]
                }
            ]
        });
    });
</script>

@Html.Partial("_HeaderSeeAlso", Model)

<div class="alert alert-info">
    <strong>Info: </strong>Use this page to control the search results sort order options available to the OPAC users. To set the default sort order , <a href="@Url.Action("Searchoptions")" title="Click to set the default sort order">click here.</a>
</div>

