<table class="table" id="searchordertypes">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(m => m.OrderTypeFriendly)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Display)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderBy(m => m.Display).ThenBy(m => m.OrderTypeFriendly))
        {
            <tr>
                <td>
                    <a href="@Url.Action("EditOrderType", new {id = item.OrderTypeID})" class="btn btn-link modal-link" title="Edit">@Html.DisplayFor(modelItem => item.OrderTypeFriendly)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Display)
                </td>
                <td class="just-right">
                    <a href="@Url.Action("EditOrderType", new {id = item.OrderTypeID})" class="btn btn-link modal-link" title="Edit"><span aria-hidden="true" class="glyphicon glyphicon-pencil"></span></a>
                    <a href="@Url.Action("MoveUp", new { id = item.OrderTypeID })" class="btn btn-link" title="Move selected item up one place"><span aria-hidden="true" class="glyphicon glyphicon-arrow-up"></span></a>
                    <a href="@Url.Action("MoveDown", new { id = item.OrderTypeID })" class="btn btn-link" title="Move selected item down one place"><span aria-hidden="true" class="glyphicon glyphicon-arrow-down"></span></a>

                </td>

            </tr>
        }
    </tbody>
</table>
